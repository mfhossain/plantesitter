# WhatsApp Backend Proxy Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:4200

# WhatsApp Cloud API Credentials
# Get these from Meta Developer Console (developers.facebook.com)
WHATSAPP_PHONE_NUMBER_ID=123456789012345
WHATSAPP_ACCESS_TOKEN=EAA...your_access_token_here...

# Optional: Database configuration (if you want to store messages)
# DATABASE_URL=mongodb://localhost:27017/whatsapp-proxy

# Optional: Logging configuration
LOG_LEVEL=info
NODE_ENV=development
